<form action="/accounts" method="POST">
  <select class="form-select" name="accountType">
    <option selected>Account Types</option>
    {{#each types}}
    <option value={{this.id}}>{{this.type}}</option>
    {{/each}}
  </select>
  <select class="form-select" name="customer">
    <option selected>Customers</option>
    {{#each customers}}
    <option value={{this.id}}>{{this.name}} {{this.last_name}}</option>
    {{/each}}
  </select>
  <div class="mb-3">
    <label class="form-label" for="inputBalance">Balance:</label>
    <input type="text" class="form-control" id="inputBalance" name="balance">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>