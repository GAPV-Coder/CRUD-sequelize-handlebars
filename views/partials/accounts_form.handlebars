<form action="/accounts" method="POST">
  <div class="mb-3">
    <label class="form-label" for="inputBalance">Balance:</label>
    <input type="text" class="form-control" id="inputBalance" name="balance">
  </div>
  <label for="accountTypeSelect">Account Type:</label>
  <select class="form-select mb-3" name="accountType" id="accountTypeSelect">
    <option selected>Choose an option</option>
    {{#each types}}
    <option value={{this.id}}>{{this.type}}</option>
    {{/each}}
  </select>
  <label for="customersSelect">Customers:</label>
  <select class="form-select mb-3" name="customer" id="customersSelect">
    <option selected>Choose an option</option>
    {{#each customers}}
    <option value={{this.id}}>{{this.name}} {{this.last_name}}</option>
    {{/each}}
  </select>
  <button type="submit" class="btn btn-success">Submit</button>
</form>