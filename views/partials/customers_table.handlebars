<table class="table my-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col" class="text-center">Update/Delete</th>
    </tr>
  </thead>
  <tbody>
      {{#each customers}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td class="d-flex justify-content-around"><a href="/customers/{{this.id}}" class="btn btn-info">Edit</a>
            <form action="/customers/delete/{{this.id}}" method="POST"><button type="submit" class="btn btn-warning">Delete</button></form></td>
        </tr>
      {{/each}}
  </tbody>
</table>