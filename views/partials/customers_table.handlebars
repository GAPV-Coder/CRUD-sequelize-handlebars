<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Update/Delete</th>
    </tr>
  </thead>
  <tbody>
      {{#each customers}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td><a href="/customers/{{this.id}}" class="btn btn-primary">Edit</a>
            <button>Delete</button></td>
        </tr>
      {{/each}}
  </tbody>
</table>