<form action="/accounts/{{currentAccount.id}}" method="POST">
<div class="mb-3">
    <label for="inputBalance" class="form-label">Balance:</label>
    <input type="text" class="form-control" id="inputBalance" name="balance" value={{currentAccount.balance}}>
  </div>
  <label for="inputAccountType">Account Types</label>
  <select class="form-select" name="accountType" id="inputAccountType">
    <option selected>{{accountTypes.}}</option>
    {{#each types}}
    <option value={{this.id}}>{{this.type}}</option>
    {{/each}}
  </select>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>