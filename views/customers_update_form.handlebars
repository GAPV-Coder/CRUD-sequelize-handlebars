<form action="/customers/update/{{currentCustomer.id}}" method="POST">
  <div class="mb-3">
    <label for="inputEmail" class="form-label">Email:</label>
    <input type="email" class="form-control" id="inputEmail" name="email" value={{currentCustomer.email}}>
  </div>
  <div class="mb-3">
    <label for="inputFirstName" class="form-label">First Name:</label>
    <input type="text" class="form-control" id="inputFirstName" name="firstName" value={{currentCustomer.name}}>
  </div>
  <div class="mb-3">
    <label class="form-label" for="inputLastName">Last Name:</label>
    <input type="text" class="form-control" id="inputLastName" name="lastName" value={{currentCustomer.last_name}}>
  </div>
  <button type="submit" class="btn btn-success">Save</button>
  <button type="button" class="btn btn-danger">Go Back</button>
</form>